{% set selected='users' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-user{% endblock %}
{% block title %}{{username}}-{{role}}{% endblock %}
{% block head_title %}{{username}}{% endblock %}

{% block title_menu %}
{% if user.level >=2 %}
	<span class="title_menu_item"><a href="{{ site_url('profile/edit/'~id) }}"><i class="fa fa-edit color10"></i> Edit</a></span>
{% elseif userid==id %}
	<span class="title_menu_item"><a href="{{ site_url('profile/edit/') }}"><i class="fa fa-edit color10"></i> Edit</a></span>
{% endif %}
{% endblock %}

{% block main_content %}
Primary Email : {{email}}<br/>
<h2>Members</h2>
{% if members %}
{% for member in members %}
<h3>{{member.name}}</h3>
{% if member.rollno%}
<b>Roll no:</b> {{member.rollno}}<br/>
{% endif %}
{% if member.year%}
<b>Year:</b> {{member.year}}<br/>
{% endif %}
{% if member.branch%}
<b>Branch:</b> {{member.branch}}<br/>
{% endif %}
{% if member.institute%}
<b>Institute:</b> {{member.institute}}<br/>
<br/>
{% endif %}
{% endfor %}
{% else %}
<p>No member data available</p>
{% endif %}
{% endblock %}  {# main_content #}